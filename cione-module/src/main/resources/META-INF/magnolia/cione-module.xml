<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
	<name>cione-module</name>
	<displayName>${project.name}</displayName>
	<description>${project.description}</description>
	<class>com.magnolia.cione.CioneModule</class>
	<versionHandler>com.magnolia.cione.setup.CioneModuleVersionHandler</versionHandler>
	<version>${project.version}</version>

	<!-- For more information on module descriptor configuration options -->
	<!-- https://documentation.magnolia-cms.com/display/DOCS/XML-based+module+descriptor -->

	<components>
		<id>main</id>
		<component>
			<type>com.magnolia.cione.pur.PURService</type>
			<implementation>com.magnolia.cione.pur.PURServiceImpl</implementation>
		</component>
		<component>
			<type>com.magnolia.cione.pur.ResponseService</type>
			<implementation>com.magnolia.cione.pur.ResponseServiceImpl</implementation>
		</component>
		<component>
			<type>com.magnolia.cione.pur.CommandsUtils</type>
			<implementation>com.magnolia.cione.pur.CommandsUtils</implementation>
		</component>
		<component>
			<type>com.magnolia.cione.pur.NodeUtilities</type>
			<implementation>com.magnolia.cione.pur.NodeUtilities</implementation>
		</component>
		<component>
			<type>com.magnolia.cione.pur.ResponseUtils</type>
			<implementation>com.magnolia.cione.pur.ResponseUtils</implementation>
		</component>
		<component>
			<type>com.magnolia.cione.pur.ResponseUtils</type>
			<implementation>com.magnolia.cione.pur.ResponseUtils</implementation>
		</component>
		<component>
	      <type>com.magnolia.cione.templating.CioneTemplatingFunctions</type>
	      <implementation>com.magnolia.cione.templating.CioneTemplatingFunctions</implementation>
	      <scope>singleton</scope>
	    </component>

	</components>

	<dependencies>
		<dependency>
			<name>core</name>
			<version>*</version>
		</dependency>						
		<dependency>
			<name>public-user-registration</name>
			<version>2.7.5</version>
		</dependency>
		<!-- commercetools old version
		<dependency>
			<name>commercetools-integration</name>
			<version>1.3.1-SNAPSHOT</version>
		</dependency> -->
		
		<dependency>
			<name>stories-app</name>
			<version>*</version>
		</dependency>
		
		<!-- Add other dependencies here, e.g the mte (magnolia templating essentials). 
			<dependency> <name>mte</name> <version>0.7/*</version> </dependency> -->
	</dependencies>

	<repositories>
		<repository>
			<name>magnolia</name>
			<workspaces>
				<workspace>noticias</workspace>
				<workspace>radiobusquedas</workspace>
				<workspace>encuestas</workspace>
				<workspace>magazines</workspace>
				<workspace>rsc-contactos</workspace>
				<workspace>rsc-documentos</workspace>
				<workspace>quality-surveys</workspace>
				<workspace>contactos</workspace>
				<workspace>catalogos</workspace>
				<workspace>promociones</workspace>
				<workspace>catalogos</workspace>
				<workspace>current-news</workspace>
				<workspace>cione-users</workspace>
			</workspaces>
			<nodeTypeFile>/mgnl-nodetypes/cione-nodetypes.xml</nodeTypeFile>
		</repository>
	</repositories> 
	
	
</module>
